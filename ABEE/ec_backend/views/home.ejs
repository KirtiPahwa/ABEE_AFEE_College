<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Homepage</title>
    <style>
      .box{
        height:300px;
        width:200px;
        border:2px solid crimson;
      }
      .pr{
        text-decoration: line-through;
      }
      
      #grid {
        justify-content: center;
        display:flex;
        
      }
      #grid div{
        margin-right: 20px;
        
      }
      
    </style>
  </head>
  <body>
    <div id="grid">
    <% results.forEach((result)=>{ %>
      <form method="post" action="/checkout" >
    <div class="box">
      <center>
      <a href="details/<%=result.id%>"><h3><%=result.name%></h3></a>
      <h4><%=result.type%></h4>
      <span class="pr"><b><%=result.price%></b></span>
      <span><b><%=result.sale_price%></b></span><br>
      <select id="stockVal" name="stock">
        <option value="0" selected >0</option>
        <%for(var i=1;i<=result.stock;i++){%>
          <option value="<%=i%>"><%=i%></option>
        <%}%>
		</select>
    <input type="hidden" name="id" value="<%=result.id%>">
    <input type="hidden" name="qty" value="<%=result.qty%>">
      <a href="addtocart/<%=result.id%>"><button type="button">Add to Cart</button></a>
      <button type="submit" >BuyNow</button>
<center>
</div>
</form>
    
    <br>
<%})%>
</div>
  </body>
</html>
